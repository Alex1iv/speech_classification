{
    "//": "Set seed value",
    "random_seed" : 42,

    "//": "Model folder",
    "model_path" : "../models/",
    "data_dir" : "../data/",
    "path_figures": "../figures/",

    "//": "Callbacks parameters",
    "model_name":"Model_voice",
    "cooldown_epochs":1,
    "lr":1e-4,
    "reduce_patience":10,
    "stop_patience":150,
    "monitor":"val_accuracy",
    "verbose":1,
    "mode":"max",
    "save_weights_only":true, 
    "save_best_only": true,
    "restore_best_weights": true,
    "factor": 0.9
}